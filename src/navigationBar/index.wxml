<view class="d-nav-bar" style="background: {{backgroundColorTop}};height: {{navBarHeight + navBarExtendHeight}}px;">
	<view class="d-nav-bar__placeholder {{ios ? 'ios' : 'android'}}" style="background-color:{{backgroundColor}};height: {{navBarHeight + navBarExtendHeight}}px;visibility: hidden;"></view>
	<view class="d-nav-bar__inner {{ios ? 'ios' : 'android'}}" style="background-color:{{backgroundColor}};{{navigationbarinnerStyle}}">

		<view class='d-nav-bar__left' style="{{navBarLeft}}">
			<block wx:if="{{back&&!home}}">
				<view
				 bindtap="back"
				 class="d-nav-bar__button d-nav-bar__btn_goback"
				 hover-class="view-hover-class"
				>
					<d-icon
					 name="arrow_back_ios"
					 size="40"
					 color="{{iconTheme}}"
					/>
				</view>
			</block>
			<block wx:if="{{!back&&home}}">
				<view
				 bindtap="home"
				 class="d-nav-bar__button d-nav-bar__btn_gohome"
				 hover-class="view-hover-class"
				>
					<d-icon
					 name="home"
					 size="40"
					 color="{{iconTheme}}"
					/>
				</view>
			</block>
			<block wx:elif="{{back&&home}}">
				<view class="d-nav-bar__buttons {{ios ? 'ios' : 'android'}} {{iconTheme}}">
					<view
					 bindtap="back"
					 class="d-nav-bar__button d-nav-bar__btn_goback"
					 hover-class="view-hover-class"
					>
						<d-icon
						 name="arrow_back_ios"
						 size="40"
						 color="{{iconTheme}}"
						/>
					</view>
					<view
					 bindtap="home"
					 class="d-nav-bar__button d-nav-bar__btn_gohome"
					 hover-class="view-hover-class"
					>
						<d-icon
						 name="home"
						 size="40"
						 color="{{iconTheme}}"
						/>
					</view>
				</view>
			</block>
			<block wx:else>
				<slot name="left"></slot>
			</block>
		</view>
		<view class='d-nav-bar__center'>
			<block wx:if="{{title}}">
				<text class="title">{{title}}</text>
			</block>
			<block wx:else>
				<slot name="center"></slot>
			</block>
		</view>
		<view class='d-nav-bar__right'>
			<slot name="right"></slot>
		</view>
	</view>
</view>

